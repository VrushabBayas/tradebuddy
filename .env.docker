# TradeBuddy Docker Environment Configuration
# Copy this file to .env and configure for your deployment

# Delta Exchange API Configuration
DELTA_API_KEY=your_delta_api_key_here
DELTA_API_SECRET=your_delta_api_secret_here

# AI Model Configuration
OLLAMA_HOST=http://ollama:11434
FINGPT_API_ENDPOINT=http://fingpt-api:8000
FINGPT_API_KEY=your_fingpt_api_key_here

# Application Environment
PYTHON_ENV=production
DEBUG=false

# Optional: Grafana Configuration
GRAFANA_PASSWORD=admin

# Optional: Redis Configuration (if using cache profile)
REDIS_URL=redis://redis:6379

# Docker-specific settings
COMPOSE_PROJECT_NAME=tradebuddy