# Copy to .env and fill in your values
# Environment Configuration
PYTHON_ENV=development
LOG_LEVEL=DEBUG

# API Configuration
DELTA_EXCHANGE_API_URL=https://api.delta.exchange

# Delta Exchange API Keys (Optional - only needed for actual trading)
# Leave empty for market data only (current TradeBuddy usage)
# Get keys from: https://www.delta.exchange/app/account/manageapikeys
DELTA_EXCHANGE_API_KEY=
DELTA_EXCHANGE_API_SECRET=

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b

# FinGPT Configuration
FINGPT_API_ENDPOINT=http://localhost:8001/api/fingpt
FINGPT_API_KEY=
FINGPT_MODEL_VARIANT=v3.2
FINGPT_TIMEOUT=60

# Database Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///tradebuddy.db

# Trading Configuration
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=1h
DEFAULT_STRATEGY=combined
MAX_POSITION_SIZE=5.0
DEFAULT_STOP_LOSS=2.5
DEFAULT_TAKE_PROFIT=5.0

# API Rate Limiting
DELTA_API_RATE_LIMIT=10
OLLAMA_TIMEOUT=120

# CLI Configuration
CLI_REFRESH_RATE=1.0
CLI_MAX_SIGNALS_DISPLAY=5
CLI_COMPACT_MODE=false